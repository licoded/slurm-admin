# Slurm Lifecycle Monitor Configuration
# Copy this file to .env.local or set as environment variables

# Database Configuration (MySQL 5.7+)
# Set these environment variables to connect to your database
export SLM_DB_HOST="your_mysql_host"
export SLM_DB_PORT="3306"
export SLM_DB_USER="slurm_admin_rw"
export SLM_DB_PASSWORD="your_secure_password"
export SLM_DB_NAME="slurm_admin"

# Usage:
#   source .env.example
#   uv run slm run -- python script.py
